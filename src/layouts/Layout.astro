---
import Sidebar from "../components/Sidebar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative h-screen p-2 gap-2">
      <aside class="[grid-area:nav] flex-col flex">
        <Sidebar />
      </aside>
      <main
        class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto max-w-7xl overflow-scroll hide-scrollbar"
      >
        <slot />
      </main>
      <aside class="[grid-area:aside] bg-slate-500"></aside>
    </div>
  </body>
</html>
<style>
  #app {
    display: grid;
    grid-template-areas: "nav main  aside";
    grid-template-columns: 250px 1fr 300px;
    grid-template-rows: 1fr auto;
  }
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: rgb(24, 24, 27);
  }
</style>
